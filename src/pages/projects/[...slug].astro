---
import { getCollection } from 'astro:content';
import MarkdownLayout from '../../layouts/MarkdownLayout.astro';

export async function getStaticPaths() {
  const projects = (await getCollection('projects'))
    .filter(project => !project.data.draft)
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
  
  return projects.map((project, index) => ({
    params: { slug: project.slug },
    props: {
      project,
      prevPost: index < projects.length - 1 ? projects[index + 1] : null,
      nextPost: index > 0 ? projects[index - 1] : null,
    },
  }));
}

const { project, prevPost, nextPost } = Astro.props;
const { Content } = await project.render();
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';
---

<MarkdownLayout {...project.data}>
  <Content />
  
  <div class="pagination">
    <div class="pagination__title">
      <span class="pagination__title-h">Read other projects</span>
      <hr />
    </div>
    <div class="pagination__buttons">
      {prevPost && (
        <>
          <a href={`${base}projects/${prevPost.slug}/`} class="button inline prev">
            &lt; [<span class="button__text">{prevPost.data.title}</span>]
          </a>
          {prevPost && nextPost && <span>::</span>}
        </>
      )}
      {nextPost && (
        <a href={`${base}projects/${nextPost.slug}/`} class="button inline next">
          [<span class="button__text">{nextPost.data.title}</span>] &gt;
        </a>
      )}
    </div>
  </div>
</MarkdownLayout>

---
import FormattedDate from './FormattedDate.astro';

export interface Props {
  project: {
    slug: string;
    data: {
      title: string;
      description?: string;
      pubDate: Date;
      author?: string;
      tags?: string[];
      image?: string;
      externalLink?: string;
    };
  };
}

const { project } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';
const projectUrl = project.data.externalLink || `${base}projects/${project.slug}/`;
const isExternal = !!project.data.externalLink;
---

<article class="post on-list">
  <h2 class="post-title">
    <a href={projectUrl} target={isExternal ? "_blank" : undefined} rel={isExternal ? "noopener" : undefined}>
      {project.data.title}
    </a>
  </h2>
  <div class="post-meta">
    <time class="post-date">
      <FormattedDate date={project.data.pubDate} />
    </time>
    {project.data.author && (
      <span class="post-author">{project.data.author}</span>
    )}
  </div>
  {project.data.tags && project.data.tags.length > 0 && (
    <span class="post-tags">
      {project.data.tags.map((tag) => (
        <>
          <a href={`${base}tags/${tag}/`}>{tag}</a>
        </>
      ))}
    </span>
  )}
  {project.data.image && (
    <figure class="post-cover">
      <img src={project.data.image} alt={project.data.title} />
    </figure>
  )}
  {project.data.description && (
    <div class="post-content">
      <p>{project.data.description}</p>
    </div>
  )}
  <div>
    <a href={projectUrl} class="read-more button inline" target={isExternal ? "_blank" : undefined} rel={isExternal ? "noopener" : undefined}>
      [Read more]
    </a>
  </div>
</article>
